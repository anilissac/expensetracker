@section Styles
    {
        <style>
        time.icon {
            font-size: 10px; /* change icon size */
            display: block;
            position: relative;
            width: 50px;
            height: 50px;
            background-color: #fff;
            border-radius: 0.6em;
            box-shadow: 0 1px 0 #bdbdbd, 0 2px 0 #fff, 0 3px 0 #bdbdbd, 0 4px 0 #fff, 0 5px 0 #bdbdbd, 0 0 0 1px #bdbdbd;
            overflow: hidden;
        }

            time.icon * {
                display: block;
                width: 100%;
                font-size: 1em;
                font-weight: bold;
                font-style: normal;
                text-align: center;
            }

            time.icon strong {
                position: absolute;
                top: 0;
                padding: 0 0;
                color: #fff;
                background-color: #fd9f1b;
                border-bottom: 1px dashed #f37302;
                box-shadow: 0 2px 0 #fd9f1b;
            }

            time.icon em {
                position: absolute;
                bottom: 1px;
                color: #fd9f1b;
                font-size: 8px;
            }

            time.icon span {
                font-size: 20px;
                letter-spacing: -0.05em;
                padding-top: 15px;
                color: #2f2f2f;
            }
        </style>
    }
