@using ExpenseTracker.DAL.Utilities
@using ExpenseTracker.DAL.Models;
@{
    ViewData["Title"] = "Security Role Details";
    var data = (SecurityRoleView)ViewData["SecurityRole"];
}
@section Styles
    {

    <style>

    </style>
}
@section Scripts
    {

}
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">@ViewData["Title"]</h6>
                </div>
            </div>
          
        <!-- Account -->
        @using (Html.BeginForm("SaveSecurityRole", "Settings", FormMethod.Post))
        {
            <input type="hidden" id="SecurityRoleID" name="SecurityRoleID" value="@data.SecurityRoleID" />
                <div class="card-body p-3">
                <div class="row">

                    <div class="mb-3 col-md-12">
                            <div class="input-group input-group-outline my-3">

                        <label for="SecurityRoleName" class="form-label">Security Role Name</label>
                        <input class="form-control" type="text" id="SecurityRoleName" name="SecurityRoleName" value="@data.SecurityRoleName">
                    </div>
                        </div>

                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2"><i class="tf-icons bx bx-save"></i>&nbsp;Save</button>
                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                </div>
            </div>
